#:kivy 1.0.9
# ref: https://kivy.org/docs/tutorials/pong.html

<Car>:
    size: 20, 10
    origin: 10, 200
    canvas:
        PushMatrix
        Rotate:
            angle: self.angle
            origin: self.center
        Rectangle:
            pos: self.pos
            size: self.size
            source: "./images/car.png"
        PopMatrix

<Ball1>:
    size: 10,10
    canvas:
        Color:
            rgba: 0.48,0.97,0.74,0.3
        Ellipse:
            pos: self.pos
            size: self.size
<Ball2>:
    size: 10,10
    canvas:
        Color:
            rgba: 0.48,0.97,0.74,0.3
        Ellipse:
            pos: self.pos
            size: self.size

<Ball3>:
    size: 10,10
    canvas:
        Color:
            rgba: 0.48,0.97,0.74,0.3
        Ellipse:
            pos: self.pos
            size: self.size

<Goal1>:
    size: 15,15
    canvas:
        Color:
            rgba: 1.0, 0.0, 0.0, 1.0
        Ellipse:
            pos: self.pos
            size: self.size
<Goal2>:
    size: 15,15
    canvas:
        Color:
            rgba: 0.0, 1.0, 0.0, 1.0
        Ellipse:
            pos: self.pos
            size: self.size

<Goal3>:
    size: 15,15
    canvas:
        Color:
            rgba: 0.0, 0.0, 1.0, 1.0
        Ellipse:
            pos: self.pos
            size: self.size

<Game>:
    car: game_car
    ball1: game_ball1
    ball2: game_ball2
    ball3: game_ball3
    goal1: game_goal1
    goal2: game_goal2
    goal3: game_goal3
    canvas:
        Rectangle:
            pos: self.pos
            size: 1360, 800
            source: "./images/citymap.png"

    Car:
        id: game_car
        center: self.parent.center
    Ball1:
        id: game_ball1
        center: self.parent.center
    Ball2:
        id: game_ball2
        center: self.parent.center
    Ball3:
        id: game_ball3
        center: self.parent.center
    Goal1:
        id: game_goal1
        center: self.parent.center
    Goal2:
        id: game_goal2
        center: self.parent.center
    Goal3:
        id: game_goal3
        center: self.parent.center
